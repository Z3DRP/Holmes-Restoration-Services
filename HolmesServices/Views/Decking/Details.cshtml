@model Decking
@{ ViewBag.Title = TempData["Action"];}

<h2>@TempData["Action"]</h2>

<ul class="list-group">
    <li class="list-group-item">
        <label>Product Code:</label>
        @Model.Product_Code
    </li>
    <li class="list-group-item">
        <label>Name:</label>
        @Model.Name
    </li>
    <li class="list-group-item">
        <label>Deck Type:</label>
        @Model.Type
    </li>
    <li class="list-group-item">
        <label>Price Per Square Foot:</label>
        @Model.Price_Per_SqFt
    </li>
    <li class="list-group-item">
        <label>Image:</label>
        <a asp-area="" asp-action="Details" asp-controller="Decking"
           asp-route-id="@Model.Id" asp-route-slug="@Model.Slug()">
            <img src="~/images/@Model.Image" alt="Image of a product" />
        </a>
    </li>
</ul>
<form asp-action="Add" asp-controller="Design" method="post">
    <button type="submit" name="id" value="@Model.Id"
            class="btn btn-primary">
        Add To Design
    </button>
    <a asp-action="Back" asp-controller="Home" 
       class="btn btn-secondary">Back</a>
</form>
